<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
						http://www.springframework.org/schema/beans/spring-beans.xsd
						http://www.springframework.org/schema/tx 
						http://www.springframework.org/schema/tx/spring-tx.xsd">

	<bean id="SettingsUsdCurrencyExchangeDao_SQLMap" class="java.util.HashMap">
		<constructor-arg>
			<map key-type="java.lang.String" value-type="java.lang.String">
				<entry key="create">
					<value><![CDATA[
					INSERT INTO settings_usd_currency_exchange
					(base_currency, exchange_symbol, is_cross, last_update_time)
					VALUES (?, ?, ?, ?)
					]]></value>
				</entry>
				<entry key="update">
					<value><![CDATA[
					UPDATE settings_usd_currency_exchange SET exchange_symbol = ?, is_cross = ?, last_update_time = ?
					WHERE base_currency = ?
					]]></value>
				</entry>

				<entry key="selectAll">
					<value><![CDATA[
					SELECT * FROM settings_usd_currency_exchange
					]]></value>
				</entry>

				<entry key="selectByKey">
					<value><![CDATA[
					SELECT * FROM settings_usd_currency_exchange WHERE base_currency = ?
					]]></value>
				</entry>

				<entry key="delete">
					<value><![CDATA[
					DELETE FROM settings_usd_currency_exchange WHERE base_currency = ?
					]]></value>
				</entry>
			</map>
		</constructor-arg>
	</bean>
</beans>
